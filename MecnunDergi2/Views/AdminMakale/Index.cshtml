@model IEnumerable<MecnunDergi2.Models.Makale>

@{
    ViewBag.Title = "Mecnun Dergi - Gönderiler";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>GÖNDERİLER</h2>

<p>
    @Html.ActionLink("Yeni Gönderi", "Create",null,new {@class="btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Baslik)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.İcerik)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Foto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tarih)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UyeId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Okunma)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Kategori.KategoriAdı)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Baslik)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.İcerik)
        </td>
        <td>
            <img width="75" src="@item.Foto"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tarih)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UyeId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Okunma)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Kategori.KategoriAdı)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.MakaleId },new {@class="btn btn-warning" }) 
            @Html.ActionLink("Detay", "Details", new { id=item.MakaleId }, new { @class = "btn btn-info" })
            @Html.ActionLink("Sil", "Delete", new { id=item.MakaleId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
