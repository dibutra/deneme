@model IEnumerable<MecnunDergi2.Models.Uye>

@{
    ViewBag.Title = "Mecnun Dergi - Admin Üyeler";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Üyeler</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AdSoyad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KullanıcıAdı)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sifre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Foto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Yetki.YetkiId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AdSoyad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KullanıcıAdı)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sifre)
        </td>
        <td>
            <img width="75" src="@item.Foto" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Yetki.Yetki1)
        </td>
        <td>
            @Html.ActionLink("Üyeyi Sil", "Delete", new { id=item.UyeId },new {@class="btn btn-danger" })
        </td>
    </tr>
}

</table>
